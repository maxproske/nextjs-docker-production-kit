{
  "extends": [
    "eslint:recommended",
    "next",
    "plugin:@typescript-eslint/eslint-recommended", // TypeScript rules
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals",
    "plugin:prettier/recommended" // Always last
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 120,
        "semi": false,
        "trailingComma": "es5",
        "tabWidth": 2,
        "useTabs": false,
        "endOfLine": "auto"
      }
    ]
  }
}